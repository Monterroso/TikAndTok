{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:video": "npm run build && node lib/test_utils/test_video_trigger.js",
    "create-test-tweet": "npm run build && node lib/test_utils/create_test_tweet.js",
    "check-emulator": "npm run build && node lib/test_utils/check_emulator_data.js"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^5.1.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.4",
    "@firebase/testing": "^0.20.11",
    "@jest/globals": "^29.7.0",
    "@types/firebase": "^3.2.3",
    "@types/jest": "^29.5.12",
    "@types/node-fetch": "^2.6.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.0"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
